# Logging Configuration
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_DIR=logs

# Service Specific Configuration
FILE_SELECTION_BATCH_SIZE=100
ANALYSIS_TIMEOUT=600
MAX_RETRIES=3